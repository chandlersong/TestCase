<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.droolstuday.example</groupId>
  <artifactId>droolstuday</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>droolstuday</name>
  <url>http://maven.apache.org</url>
  <properties>
     <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
     <droolsVersion>5.5.0.Final</droolsVersion>
  </properties>
  <build>
	  <resources>
	      <resource>
	            <directory>src\main\resources\rules</directory>
	      </resource>
	      <resource>
	            <directory>src\main\resources\log4j</directory>
	      </resource>
	  </resources>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
		<groupId>org.drools</groupId>
		<artifactId>drools-compiler</artifactId>
		<version>${droolsVersion}</version>
    </dependency>
  </dependencies>
</project>
